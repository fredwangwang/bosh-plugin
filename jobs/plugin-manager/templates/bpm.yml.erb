---
processes:
- name: plugin-manager
  executable: /var/vcap/packages/plugin-manager/plugin-manager
  args:
  #  - --port
  #  - 10568
  #  - --config
  #  - /var/vcap/jobs/plugin-manager/config/sources.yml
  env:
    PORT: 8888
    JOB: /var/vcap/jobs
    MONIT: /var/vcap/monit/job
    STORAGE: /var/vcap/store/plugin-manager
    PLUGIN_CONFIG_FILE: config.yml

    METRON_CA: lalala
    METRON_CERT: lalala
    METRON_KEY: lalala
    METRON_ADDR: asdf:23123
  limits:
    memory: 1024M
  persistent_disk: true
  unsafe:
    privileged: true
    unrestricted_volumes:
    - path: /tmp
      writable: true
    - path: /var
      writable: true
      allow_executions: true